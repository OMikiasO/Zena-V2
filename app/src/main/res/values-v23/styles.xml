<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accentPrimary</item>
        <item name="colorPrimaryDark">@color/accentPrimary</item>
        <item name="colorAccent">@color/accentPrimary</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@color/accentPrimary</item> <!--///////////-->
        <item name="android:windowLightStatusBar">true</item> <!--///////////-->
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="solidButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:inset">0dp</item>
    </style>

    <style name="strokeButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:inset">0dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/accentPrimary</item>
        <item name="colorPrimaryDark">@color/accentPrimary</item>
        <item name="colorAccent">@color/accentPrimary</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@color/accentPrimary</item> <!--///////////-->
        <item name="android:windowLightStatusBar">true</item> <!--///////////-->
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
</resources>